<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_place_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/standard_margin"
    android:layout_marginRight="@dimen/standard_margin"
    android:paddingTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/list_item_place_iv"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/place_description"
            android:orientation="vertical"
            android:paddingRight="78dp">

            <TextView
                android:id="@+id/list_item_place_place_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                tools:text="Мерефо-Херсонский железнодорожный мост"/>

            <TextView
                android:id="@+id/list_item_place_place_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Кутузова 2/3"/>

            <TextView
                android:id="@+id/list_item_place_place_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Год постройки 1923"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>