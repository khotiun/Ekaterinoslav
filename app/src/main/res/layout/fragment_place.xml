<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/standard_margin"
        android:layout_marginRight="@dimen/standard_margin">

        <ImageView
            android:id="@+id/place_photo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/place_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/place_photo"
            android:textSize="@dimen/subhead"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/place_description"
            android:orientation="vertical">

            <TextView
                android:id="@+id/place_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/title_color"
                android:textSize="@dimen/title"
                tools:text="Мерефо-Херсонский железнодорожный мост"/>

            <TextView
                android:id="@+id/place_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/title_color"
                android:textSize="@dimen/subhead"
                tools:text="Кутузова 2/3"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_architect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/place_description"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/architect_building"
                android:textSize="@dimen/title"/>

            <TextView
                android:id="@+id/place_architect_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/subhead"
                tools:text="Иванов Иван Иванович"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/building_in_our_time"
                android:textSize="@dimen/title"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_layout_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_layout_architect"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_detail_place_new_place_one"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/iv_detail_place_new_place_two"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_layout_first"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_detail_place_new_place_three"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/iv_detail_place_new_place_four"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>